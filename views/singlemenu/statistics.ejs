<%- include('../inc/header-user.ejs') %>
<div style="margin-top: 80px; height: 100vh; margin-left: 320px; flex: 1">
  <div>
    <h2>Danh sách Đơn hàng</h2>
    <table class="table">
      <thead>
        <tr>
          <th>STT</th>
          <th>Mã đơn hàng</th>
          <th>Trạng thái</th>
          <th>Thời gian</th>
        </tr>
      </thead>
      <tbody id="orderTableBody">
        <!-- Dữ liệu sẽ được cập nhật tại đây -->
      </tbody>
    </table>
  </div>
</div>
<%- include('../inc/footer.ejs') %>

<script>
  document.addEventListener("DOMContentLoaded", async function () {
    try {
      // Fetch danh sách hóa đơn từ máy chủ khi trang được tải
      const response = await fetch("/api/orderStatistics");
      const orders = await response.json();
      // Cập nhật dữ liệu vào bảng
      const tableBody = document.getElementById("orderTableBody");
      let totalAmount = 0;
      console.log(orders);
      orders.forEach((order) => {
        const totalPrice = order.products.reduce(
          (sum, product) => sum + product.price,
          0
        );
        const row = document.createElement("tr");
        row.innerHTML = `
        <td>
            <ul>
              ${order.products
                .map((product, index) => `<li>${index + 1}</li>`)
                .join("")}
            </ul>
          </td>
          <td>
            <ul>

            ${order.products
              .map(
                (product) =>
                  `<a href="/donhang/${order._id}"><li>${order._id}</li></a>`
              )
              .join("")}
            </ul>
            </td>

          <td>${order.status === 3 ? "Hoàn thành" : "Chưa hoàn thành"}</td>
          <td>${new Date(order.time).toLocaleString()}</td>
        `;
        tableBody.appendChild(row);
      });
    } catch (error) {
      console.error("Error fetching or processing data:", error);
    }
  });
</script>
